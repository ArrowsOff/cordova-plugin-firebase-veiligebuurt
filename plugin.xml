<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-firebase-veiligebuurt" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>FirebaseVeiligebuurtPlugin</name>
	
	<js-module name="firebase-veiligebuurt" src="www/firebase-veiligebuurt.js">
		<clobbers target="cordova.plugins.firebase-veiligebuurt" />
	</js-module>

	<platform name="android">
		<preference name="FIREBASE_VERSION" default="11.+"/>

		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="firebase-veiligebuurt">
				<param name="android-package" value="cordova-plugin-firebase-veiligebuurt.firebase-veiligebuurt" />
				<param name="onload" value="true" />
			</feature>
		</config-file>
		
		<config-file parent="/*" target="AndroidManifest.xml" />
		<source-file src="src/android/firebase-veiligebuurt.java" target-dir="src/cordova-plugin-firebase-veiligebuurt/firebase-veiligebuurt" />

		<framework src="com.google.firebase:firebase-core:$FIREBASE_VERSION" />
        <framework src="com.google.firebase:firebase-crash:$FIREBASE_VERSION" />
        <framework src="com.google.firebase:firebase-config:$FIREBASE_VERSION" />
        <framework src="com.google.firebase:firebase-perf:$FIREBASE_VERSION" />
	</platform>

	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="firebase-veiligebuurt">
				<param name="ios-package" value="firebase-veiligebuurt" />
				<param name="onload" value="true" />
			</feature>
		</config-file>
		
		<source-file src="src/ios/firebase-veiligebuurt.h" />
		<source-file src="src/ios/firebase-veiligebuurt.m" />

		<framework src="Firebase/Core" type="podspec" spec="~> 4.1"/>
		<framework src="Firebase/Crash" type="podspec" spec="~> 4.1"/>
		<framework src="Firebase/RemoteConfig" type="podspec" spec="~> 4.1"/>
		<framework src="Firebase/Performance" type="podspec" spec="~> 4.1"/>
	</platform>

</plugin>